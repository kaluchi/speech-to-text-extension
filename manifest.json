{
  "manifest_version": 3,
  "name": "Голосовой ввод с ElevenLabs",
  "version": "1.0",
  "description": "Двойное нажатие Cmd/Ctrl активирует запись звука и преобразование в текст с ElevenLabs API",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "image16.png",
    "48": "image48.png",
    "128": "image128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image16.png",
      "48": "image48.png",
      "128": "image128.png"
    }
  },
  "options_page": "options.html"
}